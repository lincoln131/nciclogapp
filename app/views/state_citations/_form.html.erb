<%= form_with(model: state_citation, local: true) do |form| %>
  <% if state_citation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(state_citation.errors.count, "error") %> prohibited this state_citation from being saved:</h2>

      <ul>
      <% state_citation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<p style="text-align: left;">âš <br>Please be careful during entry,<br>as you will not be able to modify data<br>after it has been submitted.</p>
  <div class="field">
    <%= form.label :book_num, "Citation Book #" %>
    <%= form.text_field :book_num, id: :state_citation_book_num %>
  </div>

  <div class="field">
    <%= form.label :issued_to, "Issued To ?" %>
    <%= form.text_field :issued_to, id: :state_citation_issued_to %>
  </div>

  <div class="field">
    <%= form.label :start_c_num, "Starting Citation #" %>
    <%= form.text_field :start_c_num, id: :state_citation_start_c_num %>
  </div>

  <div class="field">
    <%= form.label :end_c_num, "Ending Citation #" %>
    <%= form.text_field :end_c_num, id: :state_citation_end_c_num %>
  </div>

  <div class="field">
    <%= form.label :issue_date, "Date Issued?" %>
    <%= form.text_field :issue_date, id: :state_citation_issue_date %>
  </div>

  <div class="field">
    <%= form.label :issue_by, "Issued By?" %>
    <%= form.text_field :issue_by, id: :state_citation_issue_by %>
  </div>

  <div class="field">
    <%= form.label :return_date, "Date Returned?" %>
    <%= form.text_field :return_date, id: :state_citation_return_date, :readonly => state_citation.return_date.present? %>
  </div>

  <div class="field">
    <%= form.label :return_by, "Returned By?" %>
    <%= form.text_field :return_by, id: :state_citation_return_by, :readonly => state_citation.return_by.present? %>
  </div>

  <div class="field">
    <%= form.label :empty, "All Citations in this Book Used?" %>
    <%= form.check_box :empty, id: :state_citation_empty, :readonly => state_citation.empty.present? %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>|OCA</th>
      <th>|Operator</th>
      <th>|Officer</th>
      <th>|NCIC#</th>
      <th>|License Plate</th>
      <th>|State</th>
      <th>|Owner Name</th>
      <th>|Owner Phone</th>
      <th>|Date Added</th>
      <th>|Date Removed</th>
      <th>|Remove by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @license_plates.order(date_remove: :asc, created_at: :desc).each do |license_plate| %>
      <% if license_plate.date_remove.present? %>
        <tr class = "cleared">
      <% elsif license_plate.created_at > DateTime.now.in_time_zone.midnight %>
        <tr class = "new">
      <% end %>
        <td id="oca"><%= license_plate.oca %></td>
        <td><%= license_plate.operator_name.titleize %></td>
        <td><%= license_plate.officer_name.titleize %></td>
        <td><%= license_plate.ncic_num %></td>
        <td><%= license_plate.license_plate %></td>
        <td><%= license_plate.state %></td>
        <td><%= license_plate.owner_name.titleize %></td>
        <td><%= license_plate.owner_phone.titleize %></td>
        <td><%= license_plate.date_add %></td>
        <td><%= license_plate.date_remove %></td>
        <td><%= license_plate.remove_by.titleize %></td>
        <td id="smaller"><%= link_to 'View', license_plate %></td>
        <td id="smaller"><%= link_to 'Edit', edit_license_plate_path(license_plate) if license_plate.date_remove.empty? %></td>
        <%# <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>



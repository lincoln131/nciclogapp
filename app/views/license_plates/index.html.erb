        <td id="ncicNames"><%= license_plate.officer_name %></td>
        <td id="ncicNames"><%= license_plate.ncic_num %></td>
        <td id="ncicNames"><%= license_plate.license_plate %></td>
        <td id="ncicNames"><%= license_plate.state %></td>
        <td id="ncicNames"><%= license_plate.owner_name %></td>
        <td id="ncicNames"><%= license_plate.owner_phone %></td>
        <td id="ncicNames"><%= license_plate.date_add %></td>
        <td id="ncicNames"><%= license_plate.date_remove %></td>
        <td id="ncicNames"><%= license_plate.remove_by %></td>
        <td id="ncicNames"><%= link_to 'Show', license_plate %></td>
        <td id="ncicNames"><%= link_to 'Edit', edit_license_plate_path(license_plate) %></td>

      </tr>
    <% end %>

<h1> <%= link_to '🚗 Stolen Vehicles', new_stolen_vehicle_path, class: "invisLink" %></h1>
<%= link_to 'New Stolen Vehicle', new_stolen_vehicle_path, class: "myButton" %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>OCA</th>
      <th>Operator</th>
      <th>Officer</th>
      <th>NCIC#</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Vin</th>
      <th>License Plate</th>
      <th>Color</th>
      <th>Owner Name</th>
      <th>Owner Phone</th>
      <th>Date Added</th>
      <th>Date Removed</th>
      <th>Remove by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stolen_vehicles.order(date_remove: :asc, created_at: :desc).each do |stolen_vehicle| %>
      <% if stolen_vehicle.date_remove.present? %>
        <tr class = "cleared">
      <% elsif stolen_vehicle.created_at > DateTime.now.in_time_zone.midnight %>
        <tr class = "new">
      <% end %>
        <td id="oca"><%= stolen_vehicle.oca %></td>
        <td><%= stolen_vehicle.operator_name.titleize %></td>
        <td><%= stolen_vehicle.officer_name.titleize %></td>
        <td><%= stolen_vehicle.ncic_num %></td>
        <td><%= stolen_vehicle.year %></td>
        <td><%= stolen_vehicle.make %></td>
        <td><%= stolen_vehicle.model %></td>
        <td><%= stolen_vehicle.vin %></td>
        <td><%= stolen_vehicle.license_plate %></td>
        <td><%= stolen_vehicle.color %></td>
        <td><%= stolen_vehicle.owner_name.titleize %></td>
        <td><%= stolen_vehicle.owner_phone.titleize %></td>
        <td><%= stolen_vehicle.date_add %></td>
        <td><%= stolen_vehicle.date_remove %></td>
        <td><%= stolen_vehicle.remove_by.titleize %></td>
        <td id="smaller"><%= link_to 'View', stolen_vehicle %></td>
        <td id="smaller"><%= link_to 'Edit', edit_stolen_vehicle_path(stolen_vehicle) if stolen_vehicle.date_remove.empty? %></td>
        <%# <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>



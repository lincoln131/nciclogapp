<%= link_to 'New Wanted Person', new_wanted_person_path, class: "myButton" %>
<br>
<br>
<table>
  <thead>
    <tr>
      <th>OCA</th>
      <th>Operator</th>
      <th>Officer</th>
      <th>NCIC#</th>
      <th>Description</th>
      <th>Wanted By?</th>
      <th>Owner Phone</th>
      <th>Date Added</th>
      <th>Date Removed</th>
      <th>Removed by?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wanted_people.order(date_remove: :asc, created_at: :desc).each do |wanted_person| %>
      <% if wanted_person.date_remove.present? %>
        <tr class = "cleared">
      <% elsif wanted_person.created_at > DateTime.now.in_time_zone.midnight %>
        <tr class = "new">
      <% end %>
        <td id="oca"><%= wanted_person.oca %></td>
        <td><%= wanted_person.operator_name.titleize %></td>
        <td><%= wanted_person.officer_name.titleize %></td>
        <td><%= wanted_person.ncic_num %></td>
        <td><%= wanted_person.description.titleize %></td>
        <td><%= wanted_person.owner_name.titleize %></td>
        <td><%= wanted_person.owner_phone.titleize %></td>
        <td><%= wanted_person.date_add %></td>
        <td><%= wanted_person.date_remove %></td>
        <td><%= wanted_person.remove_by.titleize %></td>
        <td id="smaller"><%= link_to 'View', wanted_person %></td>
        <td id="smaller"><%= link_to 'Edit', edit_wanted_person_path(wanted_person) if wanted_person.date_remove.empty? %></td>
        <%# <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

        <tr class = "new">
      <% end %>
        <td id="oca"><%= article.oca %></td>
        <td><%= article.operator_name.titleize %></td>
        <td><%= article.officer_name.titleize %></td>
        <td><%= article.ncic_num %></td>
        <td><%= article.make %></td>
        <td><%= article.model %></td>
        <td><%= article.serial %></td>
        <td><%= article.description.titleize %></td>
        <td><%= article.owner_name.titleize %></td>
        <td><%= article.owner_phone.titleize %></td>
        <td><%= article.date_add %></td>
        <td><%= article.date_remove %></td>
        <td><%= article.remove_by.titleize %></td>
        <td id="smaller"><%= link_to 'Show', article %></td>
        <td id="smaller"><%= link_to 'Edit', edit_article_path(article) %></td>

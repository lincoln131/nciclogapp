  </div>

  <div class="field">
    <%= form.label :make %>
    <%= form.text_field :make, id: :article_make , :required => true, :readonly => article.make.present? %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, id: :article_model , :required => true, :readonly => article.model.present? %>
  </div>

  <div class="field">
    <%= form.label :serial %>
    <%= form.text_field :serial, id: :article_serial , :required => true, :readonly => article.serial.present? %>
  </div>

  <div class="field">
    <%= form.label :description %>

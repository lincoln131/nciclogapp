<%# All other _form.html.erb files follow same conventions for their respective fields %>
<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= form.label :oca %>
    <%= form.text_field :oca, id: :article_oca , :required => true, :readonly => article.oca.present? %> <%# required tag, also checks to see if there is data in field, if so, read only %>
  </div>

  <div class="field">
    <%= form.label :operator_name %>
    <%= form.text_field :operator_name, id: :article_operator_name , :required => true, :readonly => article.operator_name.present? %>
  </div>

  <div class="field">
    <%= form.label :officer_name %>

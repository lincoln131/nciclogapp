<h1>HPD NCIC LOG</h1>
<h1>Recovered Guns</h1>

<table>
  <thead>
    <tr>
      <th id="ncicNames">|OCA</th>
      <th id="ncicNames">|Operator</th>
      <th id="ncicNames">|Officer</th>
      <th id="ncicNames">|NCIC#</th>
      <th id="ncicNames">|Make</th>
      <th id="ncicNames">|Model</th>
      <th id="ncicNames">|Caliber</th>
      <th id="ncicNames">|Serial</th>
      <th id="ncicNames">|Owner Name</th>
      <th id="ncicNames">|Owner Phone</th>
      <th id="ncicNames">|Notes</th>
      <th id="ncicNames">|Date Added</th>
      <th id="ncicNames">|Date Removed</th>
      <th id="ncicNames">|Removed by?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recovered_guns.each do |recovered_gun| %>
      <tr>
        <td id="ncicNames"><%= recovered_gun.oca %></td>
        <td id="ncicNames"><%= recovered_gun.operator_name %></td>
        <td id="ncicNames"><%= recovered_gun.officer_name %></td>
        <td id="ncicNames"><%= recovered_gun.ncic_num %></td>
        <td id="ncicNames"><%= recovered_gun.make %></td>
        <td id="ncicNames"><%= recovered_gun.model %></td>
        <td id="ncicNames"><%= recovered_gun.caliber %></td>
        <td id="ncicNames"><%= recovered_gun.serial %></td>
        <td id="ncicNames"><%= recovered_gun.owner_name %></td>
        <td id="ncicNames"><%= recovered_gun.owner_phone %></td>
        <td id="ncicNames"><%= recovered_gun.notes %></td>
        <td id="ncicNames"><%= recovered_gun.date_add %></td>
        <td id="ncicNames"><%= recovered_gun.date_remove %></td>
        <td id="ncicNames"><%= recovered_gun.remove_by %></td>
        <td><%= link_to 'Show', recovered_gun %></td>
        <td><%= link_to 'Edit', edit_recovered_gun_path(recovered_gun) %></td>

      </tr>
    <% end %>
  </tbody>
</table>


        <tr class = "cleared">
      <% elsif vehicle_boat_part.created_at > DateTime.now.in_time_zone.midnight %>
        <tr class = "new">
      <% end %>
        <td id="oca"><%= vehicle_boat_part.oca %></td>
        <td><%= vehicle_boat_part.operator_name.titleize %></td>
        <td><%= vehicle_boat_part.officer_name.titleize %></td>
        <td><%= vehicle_boat_part.ncic_num %></td>
        <td><%= vehicle_boat_part.description.titleize %></td>
        <td><%= vehicle_boat_part.owner_name.titleize %></td>
        <td><%= vehicle_boat_part.owner_phone.titleize %></td>
        <td><%= vehicle_boat_part.date_add %></td>
        <td><%= vehicle_boat_part.date_remove %></td>
        <td><%= vehicle_boat_part.remove_by.titleize %></td>
        <td id="smaller"><%= link_to 'Show', vehicle_boat_part %></td>
        <td id="smaller"><%= link_to 'Edit', edit_vehicle_boat_part_path(vehicle_boat_part) %></td>

      </tr>
    <% end %>
  </tbody>
</table>



<table>
  <thead>
    <tr>
      <th>|OCA</th>
      <th>|Operator</th>
      <th>|Officer</th>
      <th>|NCIC#</th>
      <th>|Description</th>
      <th>|Owner Name</th>
      <th>|Owner Phone</th>

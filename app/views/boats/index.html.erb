        <td id="ncicNames"><%= boat.owner_name %></td>
        <td id="ncicNames"><%= boat.owner_phone %></td>
        <td id="ncicNames"><%= boat.date_add %></td>
        <td id="ncicNames"><%= boat.date_remove %></td>
        <td id="ncicNames"><%= boat.remove_by %></td>
        <td id="ncicNames"><%= link_to 'Show', boat %></td>
        <td id="ncicNames"><%= link_to 'Edit', edit_boat_path(boat) %></td>

